<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kompy.bmicalculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/backgroundcolor"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Enter your height in meters"
            android:textColor="@color/textcolor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/height"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/heightvalue"
            android:inputType="number|numberDecimal"
            android:text=""
            android:textColor="@color/textcolor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter your weight in kilograms"
            android:textColor="@color/textcolor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/weightvalue"
            android:inputType="number|numberDecimal"
            android:text=""
            android:textColor="@color/textcolor" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/butonbackgrondcolor"
            android:text="@string/calculate"
            android:textColor="@color/textcolor" />

        <TextView
            android:id="@+id/numericresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number|numberDecimal"
            android:text=""
            android:textColor="@color/textcolor"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text=""
            android:textColor="@color/textcolor"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="298dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:text=""
            android:textColor="@color/textcolor"
            android:textSize="24dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="346dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
